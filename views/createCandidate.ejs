<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Create Candidate</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gradient-to-br from-green-800 to-gray-900 text-white min-h-screen font-sans px-4 py-10">

  <!-- Back Button -->
  <div class="mb-8">
    <a href="/profile"
      class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded">
      ← Back to Profile
    </a>
  </div>

  <!-- Page Title -->
  <h1 class="text-3xl font-bold text-center mb-10">Create New Candidate</h1>

  <!-- Form -->
  <form action="/candidates/create-new-candidate" method="POST"
    class="max-w-xl mx-auto bg-white/10 border border-white/20 backdrop-blur-lg rounded-xl p-8 shadow-lg space-y-6">

    <!-- Name Field -->
    <div>
      <label for="name" class="block text-blue-300 font-medium mb-2">Candidate Name</label>
      <input type="text" name="name" id="name" required
        class="w-full px-4 py-2 rounded bg-white/20 border border-white/30 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
        placeholder="Enter candidate's name">
    </div>

    <!-- Party Field -->
    <div>
      <label for="party" class="block text-blue-300 font-medium mb-2">Political Party</label>
      <input type="text" name="party" id="party" required
        class="w-full px-4 py-2 rounded bg-white/20 border border-white/30 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
        placeholder="Enter party name">
    </div>

    <!-- Age Field -->
    <div>
      <label for="age" class="block text-blue-300 font-medium mb-2">Candidate Age</label>
      <input type="number" name="age" id="age" required
        class="w-full px-4 py-2 rounded bg-white/20 border border-white/30 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
        placeholder="Enter age">
    </div>

    <!-- Submit Button -->
    <div class="flex justify-center">
      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded">
        Create Candidate
      </button>
    </div>
  </form>

</body>

</html>