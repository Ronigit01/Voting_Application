<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>All Candidates</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/dist/output.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gradient-to-br from-green-800 to-gray-900 text-white min-h-screen font-sans">

  <!-- Navigation -->
  <nav
    class="flex flex-col md:flex-row md:justify-between md:items-center px-4 md:px-10 py-5 gap-5 md:gap-0 border-b border-white/20">
    <!-- Navigation Links -->
    <div class="flex flex-row gap-4 md:gap-10 text-sm md:text-lg font-medium justify-center items-center">
      <a href="/profile" class="border-b-2 border-transparent hover:border-white transition">Personal Info</a>
      <a href="/cadidates" class="border-b-2 border-white pb-1">Candidates</a>
      <a href="/vote/counts" class="border-b-2 border-transparent hover:border-white transition">Vote Counts</a>
      <% if(user.role=="voter" ) { %>
        <a href="/vote/panel" class="border-b-2 border-transparent hover:border-white transition">Voting Panel</a>
        <% } %>

    </div>


    <!-- Right Buttons -->
    <div class="flex justify-center md:justify-end gap-4">
      <!-- Back Button -->
      <a href="/profile"
        class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded text-sm md:text-base transition">
        ← Back to Profile
      </a>
    </div>
  </nav>

  <!-- Page Header -->
  <header class="mt-8 text-center px-4">
    <h1 class="text-3xl md:text-4xl font-bold tracking-wide">All Registered Candidates</h1>
    <p class="text-gray-300 mt-2 text-base md:text-lg">Verified candidates for the official election process.</p>
  </header>

  <!-- Candidates List -->
  <section class="max-w-7xl mx-auto mt-12 px-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% if (candidatedata.length> 0) { %>
      <% candidatedata.forEach(candidate=> { %>
        <div
          class="bg-white/10 border border-white/20 backdrop-blur-lg rounded-xl p-6 shadow-lg hover:shadow-xl transition duration-300">
          <h2 class="text-xl md:text-2xl font-semibold text-white mb-2">
            <%= candidate.name %>
          </h2>
          <p class="text-blue-300 text-base mb-1">Party: <%= candidate.party %>
          </p>
          <p class="text-sm text-gray-300">Age: <%= candidate.age %>
          </p>
        </div>
        <% }) %>
          <% } else { %>
            <div class="col-span-full text-center text-gray-300 mt-10">
              <p>No candidates have been added yet.</p>
            </div>
            <% } %>
  </section>

  <!-- Footer -->
  <footer class="text-center mt-16 text-sm text-gray-400 px-4 pb-6">
    <p>All candidate information is validated and approved by the Election Authority.</p>
    <p class="mt-1">© <%= new Date().getFullYear() %> National Online Voting Platform</p>
  </footer>

</body>

</html>